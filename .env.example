# BFI Signals Configuration Template
# Copy this file to .env and update with your actual values

# Discord Integration (REQUIRED)
# Get your webhook URL from Discord: Server Settings > Integrations > Webhooks
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN

# API Keys (OPTIONAL)
# Google Gemini API for enhanced AI features
# GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI API for advanced sentiment analysis
# OPENAI_API_KEY=your_openai_api_key_here

# Financial Data APIs (OPTIONAL)
# Alpha Vantage API for enhanced market data
# ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# Finnhub API for additional financial data
# FINNHUB_API_KEY=your_finnhub_api_key_here

# Database Configuration
DATABASE_URL=sqlite:///ai_learning.db

# Application Settings
FLASK_ENV=production
DEBUG=False

# Trading Configuration
# Comma-separated list of symbols to analyze
TRADING_SYMBOLS=^NDX,US30

# Discord Formatting Options
USE_ENHANCED_DISCORD=true
USE_SIMPLE_DISCORD=false

# News Analysis
INCLUDE_NEWS_ANALYSIS=true

# Auto Signal Generation
AUTO_SIGNAL_GENERATION=true

# Security (OPTIONAL)
# Secret key for Flask sessions
# SECRET_KEY=your_secret_key_here

# Environment Identifier (for different deployments)
ENVIRONMENT=production